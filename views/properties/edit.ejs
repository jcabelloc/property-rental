<% include ../partials/header %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-9 col-lg-6">
            <h1>Edit property</h1>
        </div>
        <div class="col-sm-9 col-lg-6">
            <form action="/properties/<%= property._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="number" class="form-control" name="property[price]" value="<%= property.price%>">
                </div>
                <div class="form-group">
                    <input type="url"  class="form-control" name="property[url]" value="<%= property.url%>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="property[address]" value="<%= property.address%>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="3" name="property[description]">"<%= property.description%>"</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>
