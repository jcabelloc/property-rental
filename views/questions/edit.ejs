<% include ../partials/header %>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-9">
            <h1>Edit your question</h1>
            <form class="form" action="/properties/<%=propertyId%>/questions/<%=question._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="question[question]" value="<%=question.question%>">
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>


